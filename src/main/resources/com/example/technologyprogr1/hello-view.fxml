<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="336.0" prefWidth="487.0" spacing="15" style="-fx-background-color: #f0f0f0; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technologyprogr1.HelloController">
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Конвертер Word ↔ Excel" />

    <Button onAction="#onSelectFiles" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Выбрать файлы" />
    <Button onAction="#onSelectFolder" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Выбрать папку для сохранения" />
    <Button onAction="#onConvert" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Начать конвертацию" />
    <Button onAction="#onOpenFile" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Открыть папку с результатами" />

    <Label fx:id="fileListLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Выбранные файлы:" />
    <Label fx:id="folderPathLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Папка для сохранения:" />
</VBox>