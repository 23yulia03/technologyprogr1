<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="30" style="-fx-background-color: #ffffff; -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.technologyprogr1.HelloController">
    <!-- Заголовок -->
    <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-margin-bottom: 20px;" text="Конвертер Excel в Excel/Word" />

    <!-- Раздел выбора файлов/папки для конвертации -->
    <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 18px; -fx-text-fill: #555;" text="Шаг 1: Выберите файлы или папку для конвертации" />

        <!-- Кнопки выбора файлов или папки -->
        <HBox spacing="20" alignment="CENTER">
            <Button onAction="#handleSelectFilesButtonAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Выбрать файлы" />
            <Button onAction="#handleSelectFolderButtonAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Выбрать папку" />
        </HBox>

        <!-- Информация о выбранных файлах -->
        <Label fx:id="fileListLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Выбранные файлы: Нет файлов" />
    </VBox>

    <!-- Раздел с выбором папки для сохранения -->
    <VBox spacing="20" alignment="CENTER" style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 18px; -fx-text-fill: #555;" text="Шаг 2: Выберите папку для сохранения результатов" />

        <!-- Кнопка выбора папки для сохранения -->
        <Button onAction="#onSelectFolder" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Выбрать папку для сохранения" />
        <Label fx:id="folderPathLabel" style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Папка для сохранения: Не выбрана" />
    </VBox>

    <!-- Раздел с действиями -->
    <VBox spacing="15" alignment="CENTER" style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Button onAction="#onConvert" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Начать конвертацию" />
        <Button onAction="#onOpenFile" style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" text="Открыть папку с результатами" />
    </VBox>

    <!-- Подсказка -->
    <HBox spacing="10" alignment="CENTER">
        <Label style="-fx-font-size: 14px; -fx-text-fill: #888;" text="Чтобы начать конвертацию, выберите файлы и папку для сохранения." />
    </HBox>
</VBox>
